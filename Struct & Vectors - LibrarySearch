#include <iostream>
#include <string.h>
#include <vector>
#include <algorithm>

using namespace std;

    struct Book {
        string title;
        string author;
        string publisher;
        string status;
        int year;
    };

    Book catalogue[] = { {"Percy Jackson and the Lightning Thief", "Rick Riordan", "Puffin Books", "available", 2005},
                     {"Jane Eyre", "Charlotte BrontÃ«", "Smith, Elder & Co.", "available", 1847},
                     {"Harry Potter and the Philosopher's Stone", "J.K Rowling", "Bloomsbury (UK)", "available", 1997},
                     {"Harry Potter and the Chamber of Secrets", "J.K Rowling", "Bloomsbury (UK)", "available", 1998},
                     {"Harry Potter and the Prisoner of Azkaban", "J.K Rowling", "Bloomsbury (UK)", "available", 1999},
                     {"Harry Potter and the Goblet of Fire", "J.K Rowling", "Bloomsbury (UK)", "available", 2000},
                     {"Harry Potter and the Order of the Phoenix", "J.K Rowling", "Bloomsbury (UK)", "available", 2003},
                     {"Harry Potter and the Half-Blood Prince", "J.K Rowling", "Bloomsbury (UK)", "available", 2005},
                     {"Harry Potter and the Deathly Hallows", "J.K Rowling", "Bloomsbury (UK)", "available", 2007}
                    };
    vector<string> loans;

    void searchCatalogue();
    void borrowBooks();
    void choiceDirector();
    void reviewLoans();
    void returnBooks();
    bool returnVal(string s);

    int main() {
        choiceDirector();
    }

    void searchCatalogue() {
        int counts = 0;
        string key;
        cout << "Enter keyword to search: " << endl;
        cin.ignore();
        getline(cin, key);
        cout << "----------------------------" << endl;
        for (int i = 0; i < 9; i++) {
            string name = catalogue[i].title;
            string author = catalogue[i].author;
            int found = name.find(key);
            int found2 = author.find(key);
            if (found != string::npos || found2 != string::npos) {
                cout << catalogue[i].title << " -- " << catalogue[i].status << endl;
                counts ++;
            }
        }
        cout << "----------------------------" << endl;
        cout << counts << (counts == 1 ? " result " : " results ") << "found." << endl;
        choiceDirector();
    }

    void borrowBooks() {
        string searchTitle;
        int borrowed = 0;
        cout << "Enter full title of book to borrow:" << endl;
        cin.ignore();
        getline(cin, searchTitle);
        for (int i = 0; i < 8; i++) {
            if (searchTitle == catalogue[i].title && catalogue[i].status == "available") {
                string yesNo;
                cout << "Borrow " << catalogue[i].title << " by " << catalogue[i].author << " ?" << endl;
                cin >> yesNo;
                if (yesNo == "Yes") {
                    loans.push_back(catalogue[i].title);
                    cout << catalogue[i].title << " successfully added to your loans." << endl;
                    borrowed = 1;
                    catalogue[i].status = "unavailable";
                    cout << "----------------------------" << endl;
                }
            } else if (searchTitle == catalogue[i].title && catalogue[i].status != "available") {
                borrowed = 1;
                cout << "Book is currently unavailable." << endl;
            }
        }
        if (borrowed == 0) {
            cout << "Book not found. Please check your spelling." << endl;
        }
        choiceDirector();
    }

    void reviewLoans() {
        cout << "LOANS" << endl;
        cout << "----------------------------" << endl;
        for(int j=0; j < loans.size(); j++) {
            cout << loans.at(j) << endl;
        }
        cout << "----------------------------" << endl;
        choiceDirector();
    }

    void returnBooks() {
        cout << "LOANS" << endl;
        cout << "----------------------------" << endl;
        for(int j=0; j < loans.size(); j++) {
            cout << loans.at(j) << endl;
        }
        cout << "----------------------------" << endl;
        string searchTitle;
        int borrowed = 0;
        cout << "Enter full title of book to return:" << endl;
        cin.ignore();
        getline(cin, searchTitle);
        for (int i = 0; i < loans.size(); i++) {
            if (searchTitle == loans.at(i)) {
                string title;
                string yesNo;
                cout << "Return " << loans.at(i) << "?" << endl;
                cin >> yesNo;
                if (yesNo == "Yes") {
                    title = loans.at(i);
                    auto it = find_if(loans.begin(), loans.end(), returnVal);
                    loans.erase(it);
                    cout << title << " successfully returned to library." << endl;
                    catalogue[i].status = "available";
                    borrowed = 1;
                    cout << "----------------------------" << endl;
                }
            }
        }
        if (borrowed == 0) {
            cout << "Book not found. Please check your spelling." << endl;
        } choiceDirector();
    }

    bool returnVal(string s) {
        return true;
    }

    void choiceDirector() {
        char in;
        cout << "Press x to exit, s to search catalogue, b to borrow books, r to return books, l to review your loans." << endl;
        cin >> in;
        switch(in) {
        case 'x':
            exit(0);
            break;
        case 's':
            searchCatalogue();
            break;
        case 'b':
            borrowBooks();
            break;
        case 'r':
            returnBooks();
            break;
        case 'l':
            reviewLoans();
            break;
        default:
            cout << "ERROR" << endl;
            exit(0);
        }
    }
